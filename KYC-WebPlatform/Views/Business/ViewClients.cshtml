@{
    ViewBag.Title = "ViewClients";
    Layout = "~/Views/Shared/_BusinessLayout.cshtml";
}
@model Dictionary<string, List<object>>

<body class="app">
    <div class="app-wrapper">
        <div class="app-content pt-3 p-md-3 p-lg-4">
            <div class="container-xl">

                <h1 class="app-page-title"> All Businesses</h1>

                <div class="row g-4 mb-4">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger mt-3">
                            @TempData["ErrorMessage"].ToString()
                        </div>
                    }
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success mt-3">
                            @TempData["SuccessMessage"].ToString()
                        </div>
                    }
                    @foreach (var row in Model)
                    {
                        <div class="col-md-4 col-sm-6">
                            <div class="app-card app-card-basic d-flex flex-column align-items-start shadow-sm">
                                <div class="app-card-header p-3 border-bottom-0">
                                    <div class="row align-items-center gx-3">
                                        <div class="col-auto">
                                            <div class="app-icon-holder icon-holder-mono">
                                                <!-- SVG Icon -->
                                            </div><!--//icon-holder-->
                                        </div><!--//col-->
                                        <div class="col-auto">
                                            <h4 class="app-card-title">@row.Value[1]</h4>
                                            <!--<span class="badge badge bg-warning">@row.Value[2]</span>--> <!-- Status Badge -->
                                        </div><!--//col-->
                                    </div><!--//row-->
                                </div><!--//app-card-header-->

                                <div class="app-card-body px-4">
                                    <ul class="list-unstyled">
                                        <li><strong>Contact Person:</strong> @row.Value[3]</li>
                                        <li><strong>Transaction Volume:</strong> @row.Value[5]</li>
                                        <li><strong>Transaction Traffic:</strong> @row.Value[6]</li>
                                        <li><strong>Email:</strong> @row.Value[7]</li>
                                        <li><strong>Phone Number:</strong> @row.Value[8]</li>
                                        <li><strong>Location:</strong> @row.Value[9]</li>
                                        <li><strong>Created Date:</strong> @row.Value[10]</li>
                                        @* <li class="badge badge bg-warning"><strong>Pending</strong></li>*@

                                    </ul>
                                </div><!--//app-card-body-->

                                <div class="app-card-footer p-4 mt-auto">
                                    <a class="btn app-btn-secondary" href="@Url.Action("ViewClientDetails", "Business", new { BusinessId = row.Value[0] })">View Validation Details</a>
                                    @* <a class="btn app-btn-secondary" href="@Url.Action("ApproveClient", "Business", new { id = row.Value[0] })">Approve</a>*@
                                </div><!--//app-card-footer-->
                            </div><!--//app-card-->
                        </div><!--//col-->
                    }
                </div><!--//row-->
            </div>
        </div>
    </div>
</body>
