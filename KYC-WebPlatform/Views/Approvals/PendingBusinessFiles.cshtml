
@{
    ViewBag.Title = "PendingBusinessFiles";
    Layout = "~/Views/Shared/_BusinessLayout.cshtml";
}
@model Dictionary<string, List<object>>



<body class="app">

    <div class="app-wrapper">

        <div class="app-content pt-3 p-md-3 p-lg-4">
            <div class="container-xl">

                <div class="tab-content" id="orders-table-tab-content">
                    <div class="tab-pane fade show active" id="orders-all" role="tabpanel" aria-labelledby="orders-all-tab">
                        <div class="app-card app-card-orders-table shadow-sm mb-5">
                            <div class="app-card-body">
                                <div class="table-responsive">
                                    <table class="table app-table-hover mb-0 text-left">
                                        <thead>
                                            <tr>
                                                <th class="cell">Number</th>
                                                <th class="cell">File name</th>
                                                <th class="cell">Business name</th>
                                                <th class="cell">Uploaded date</th>
                                                <th class="cell">Approve</th>
                                                <th class="cell">File path</th>
                                                <th class="cell">To be approved by</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var Row in Model)
                                            {
                                                <form action="@Url.Action("DisplayApproval", "Approvals")" method="post">
                                                    @Html.Hidden("FileName", Row.Value[1])
                                                    @Html.Hidden("BusinessName", Row.Value[7])
                                                    @Html.Hidden("UploadedDate", Row.Value[3])
                                                    @Html.Hidden("FilePath", Row.Value[5])
                                                    @Html.Hidden("ToBeApprovedBy", Row.Value[6])

                                                    <tr>
                                                        <td class="cell">@Row.Value[0]</td>
                                                        <td class="cell"><span class="truncate">@Row.Value[1]</span></td>
                                                        <td class="cell">@Row.Value[7]</td>
                                                        <td class="cell"><span>17 Oct</span><span class="note">@Row.Value[3]</span></td>
                                                        <td class="cell"><span class="badge bg-success">@Row.Value[4]</span></td>
                                                        <td class="cell">@Row.Value[6]</td>
                                                    </tr>

                                                    <button type="submit" class="hidden">Click to approve</button>
                                                </form>
                                            }
                                        </tbody>
                                    </table>
                                </div><!--//table-responsive-->

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

